<Page x:Class="DocsUnoTesting.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DocsUnoTesting.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer IsTabStop="True">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <TextBlock Grid.Row="0"
                 Text="{Binding Title}" />

      <Button Grid.Row="1"
              Content="Show Tree View"
              Command="{Binding ShowTreeViewCommand}" 
              Margin="16"/>

      <Grid Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Padding="16">
        <local:TestResultsView DataContext="{Binding TestResultsViewModel}" />
      </Grid>
    </Grid>
  </ScrollViewer>
</Page>
